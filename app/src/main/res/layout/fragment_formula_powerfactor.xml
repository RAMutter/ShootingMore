<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#384c8071">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight(gr.) x Velocity(fps) / 1000 = PF"
        android:id="@+id/tvHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:id="@+id/linLayout1"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bullet weight in grains"
            android:id="@+id/tvBulletWeight"
            android:layout_marginLeft="5dp"
            android:layout_weight="60"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etPFbulletWeight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#f0eed3"
            android:layout_weight="40"
            android:layout_marginRight="20dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout1"
        android:id="@+id/linLayout2"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bullet velocity in fps"
            android:id="@+id/tvBulletVelocity"
            android:layout_marginLeft="5dp"
            android:layout_weight="60"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etPFBulletVelocity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#f0eed3"
            android:layout_weight="40"
            android:layout_marginRight="20dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout2"
        android:id="@+id/linLayout3"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calc"
            android:id="@+id/btnCalc"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="#5baa37"
            android:layout_marginRight="50dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/btnReset"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="#d4d3d3" />

    </LinearLayout>"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvPFanswer"
        android:text="answer text here"
        android:foregroundGravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"/>

</RelativeLayout>