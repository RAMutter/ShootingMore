<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/elvFiles"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ExpandableListView>

    <!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:id="@+id/btnOpenRead"
        android:layout_below="@+id/elvFiles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>
    -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnOpenRead">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 1"
                    android:id="@+id/textCaliberInfo"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/btnOpenRead"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 2"
                    android:id="@+id/textCaliberInfo2"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/textCaliberInfo"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TableLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/tableData"
                    android:background="#c0cfbc"
                    android:layout_below="@+id/textCaliberInfo">
                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>


</LinearLayout>