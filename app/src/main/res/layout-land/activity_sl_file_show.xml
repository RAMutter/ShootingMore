<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sl_file_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ramdomstuff.ram.shootingmore.SlFileShowActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elvFiles">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/elvFiles">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFile"
                    android:text="File"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 1"
                    android:id="@+id/textCaliberInfo"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/btnOpenRead"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 2"
                    android:id="@+id/textCaliberInfo2"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/textCaliberInfo"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 3"
                    android:id="@+id/textCaliberInfo3"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/textCaliberInfo2"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line 4"
                    android:id="@+id/textCaliberInfo4"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/textCaliberInfo3"
                    android:layout_marginBottom="2dp"
                    android:textColor="#0000ff"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:visibility="visible"/>

                <TableLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="left"
                    android:id="@+id/tableData"
                    android:background="#c0cfbc"
                    android:layout_below="@+id/textCaliberInfo">
                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
